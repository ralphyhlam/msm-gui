<h1>
  List of all directors
</h1>

<hr>

<form action="/add_director" method="post">
  <div>
  <label for="new_director_name">Name</label>
  <input id="new_director_name" name="user_director_name">
  </div>

  <div>
  <label for="new_director_dob">Dob</label>
  <input type ="date" id="new_director_dob" name="user_director_dob">
  </div>
  
  <div>
  <label for="new_director_bio">Bio</label>
  <input id="new_director_bio" name="user_director_bio">
  </div>

  <div>
  <label for="new_director_image">Image</label>
  <input id="new_director_image" name="user_director_image">
  </div>

  <button>Create director</button>
</form>



<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_directors.order({:dob => :desc}).each do |director| %>
  <tr>
    <td>
      <%= director.id %>
    </td>

    <td>
      <img src="<%= director.image %>" style="width:250px;">
    </td>

    <td>
      <%= director.name %>
    </td>

    <td>
      <%= director.dob %>
    </td>

    <td>
      <a href="/directors/<%= director.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
