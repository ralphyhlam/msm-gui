<h1>
  Movie #<%= @the_movie.id %> details
</h1>

<div>
<a href="/movies">
  Go back
</a>
</div>

<div>
<a href="/delete_movie/<%= @the_movie.id%>">
  Delete movie
</a>
</div>

<hr>


<form action="/modify_movie/<%= @the_movie.id %>" method="post">
  <div>
  <label for="movie_title">Name</label>
  <input id="movie_title" name="mod_movie_title" value= <%=@the_movie.title%>>
  </div>

  <div>
  <label for="movie_year">Year</label>
  <input id="movie_year" name="mod_movie_year" value= <%=@the_movie.year%>>
  </div>
  
  <div>
  <label for="movie_duration">Duration</label>
  <input id="movie_duration" name="mod_movie_duration" value= <%= @the_movie.duration%>>
  </div>

  <div>
  <label for="movie_description">Duration</label>
  <textarea id="movie_description" name="mod_movie_description" rows="3"><%=@the_movie.description%></textarea>
  </div>

  <div>
  <label for="movie_image">Image</label>
  <input id="movie_image" name="mod_movie_image" value= <%=@the_movie.image%>>
  </div>

  <div>
  <label for="movie_dID">Director ID</label>
  <input id="movie_dID" name="mod_movie_dID" value= <%= @the_movie.director_id%>>
  </div>

  <button>Update movie</button>
</form>

<hr>


<dl>
  <dt>
    Title
  </dt>
  <dd>
    <%= @the_movie.title %>
  </dd>

  <dt>
    Year
  </dt>
  <dd>
    <%= @the_movie.year %>
  </dd>

  <dt>
    Duration
  </dt>
  <dd>
    <%= @the_movie.duration %>
  </dd>

  <dt>
    Description
  </dt>
  <dd>
    <%= @the_movie.description %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @the_movie.image %>" style="width:250px;">
  </dd>

  <dt>
    Director
  </dt>
  <dd>
    <% dir_id = @the_movie.director_id %>
    
    <% matching_directors = Director.where({ :id => dir_id }) %>
    
    <% the_director = matching_directors.at(0) %>

    <%= the_director.name %>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= @the_movie.created_at %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= @the_movie.updated_at %>
  </dd>
</dl>

<hr>
